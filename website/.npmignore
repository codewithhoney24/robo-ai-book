# npm ignore file for website
# Ignore everything except what's needed for npm publish

# Don't ignore package.json or package-lock.json
!package.json
!package-lock.json

# Ignore source control
.git/
.gitignore

# Ignore documentation (if not needed for npm package)
# docs/

# Ignore tests if not needed for npm package
test/
tests/

# Ignore build artifacts from local development
node_modules/
build/
.docusaurus/
.cache-loader

# Ignore environment-specific files
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Ignore log files
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*

# Ignore OS-specific files
.DS_Store
Thumbs.db

# Ignore IDE files
.vscode/
.idea/