# Database Configuration - Using file-based SQLite for development
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Neon Postgres settings (for production)
NEON_DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Qdrant settings
QDRANT_ENDPOINT=https://your-qdrant-cluster-url
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_CLIENT_URL=https://your-qdrant-cluster-url:6333

# Cohere settings
COHERE_API_KEY=your-cohere-api-key
COHERE_EMBED_MODEL=embed-english-v3.0

# OpenAI settings
OPENAI_API_KEY=your-openai-api-key

# Qwen CLI settings
QWEN_CLI_PATH=

# Application settings
APP_NAME=RAG Chatbot for Published Book
DEBUG=False
VERSION=1.0.0
HOST=127.0.0.1
PORT=8000
MAX_QUERY_LENGTH=2000
RELEVANCE_THRESHOLD=0.7

# Security settings
ALLOWED_HOSTS=["*"]
SECURE_HEADERS_ENABLED=True
MAX_SESSION_AGE_HOURS=24
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Security settings
SECRET_KEY=your-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Connection settings
MAX_CONNECTIONS=20
MIN_CONNECTIONS=5
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=60
RETRY_ATTEMPTS=3
WARMUP_INTERVAL=60

# Performance settings
RESPONSE_TIME_THRESHOLD=0.2
PERFORMANCE_WINDOW_SIZE=100


# Greeting patterns for simple queries
GREETING_PATTERNS=["hi", "hello", "hey", "greetings", "good morning", "good afternoon", "good evening", "good night"]
MAX_GREETING_QUERY_LENGTH=30